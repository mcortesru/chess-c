{
  "name": "C Development",
  "image": "gcc:latest",
  "postCreateCommand": "apt update && apt upgrade -y && apt install -y clang-format",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "xaver.clang-format",
        "Codeium.codeium"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.defaultFormatter": "xaver.clang-format",
        "[c]": {
          "editor.defaultFormatter": "xaver.clang-format"
        },
        "[cpp]": {
          "editor.defaultFormatter": "xaver.clang-format"
        },
        "files.associations": {
          "*.h": "c"
        },
        "editor.formatOnSave": true,
        "clang-format.style": "file",
        "clang-format.executable": "/usr/bin/clang-format"
      }
    }
  }
}